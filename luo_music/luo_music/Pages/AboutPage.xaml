                        <TextBlock Text="Apple" Margin="2" HorizontalAlignment="Center"/>
                        <Image Name="qrcode_apple" Source="/Assets/qrcode_apple.png"
                            Width="122" Height="122" Margin="{StaticResource ButtonsStackMargin}"
                            />
                    </StackPanel>
                </StackPanel>
                
